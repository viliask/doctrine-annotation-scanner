{
    "name": "phramz/doctrine-annotation-scanner",
    "type": "library",
    "description": "library to scan files and folders for annotated classes using doctrine annotations",
    "keywords": ["annotation", "doctrine", "scanner"],
    "homepage": "https://github.com/phramz/doctrine-annotation-scanner",
    "license": "MIT",
    "authors": [
        {
            "name": "Maximilian Reichel",
            "email": "mr@phramz.com"
        }
    ],
    "require": {
        "php": ">=5.3",
        "doctrine/annotations": ">=1.1",
        "symfony/finder": ">=2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "phpmd/phpmd" : "1.4.*",
        "squizlabs/php_codesniffer": "1.*"
    },
    "autoload": {
        "psr-0": { "Phramz\\Doctrine\\Annotation": "src/" }
    },
    "minimum-stability": "stable"
}
